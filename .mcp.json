{
      "mcpServers": {
        "puppeteer": {
          "type": "stdio",
          "command": "npx",
          "args": [
            "-y",
            "@modelcontextprotocol/server-puppeteer"
          ],
          "env": {
            "PUPPETEER_LAUNCH_OPTIONS": "{ \"headless\": true, \"executablePath\": \"/usr/bin/chromium\", \"args\": [\"--no-sandbox\", \"--disable-setuid-sandbox\", \"--disable-dev-shm-usage\"] }",
            "ALLOW_DANGEROUS": "true"
          }
        }
      }
}


